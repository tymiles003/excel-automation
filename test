      add_rp_step4_1$add_flag_rp_step4<-ifelse(!(add_rp_step4_1$Line_number %in% existing_lines), 1,add_rp_step4_1$add_flag_rp_step4) #rectify amend flag if someone has added and amended the action in same step
      
