  #Pop-up box for Inputs
  observeEvent(input$lastClick,
               {
                 if (input$lastClickId%like%"modify_crt")
                 {
                   selected_row=as.numeric(gsub("modify_crt_","",input$lastClickId))
                   old_row=vals2$Data[selected_row]
                   
