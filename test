  observe({
    mandatoryFilled <-
      vapply(fieldsMandatory_amend_site,
             function(x) {
               !is.null(input[[x]]) && input[[x]] != ""
             },
             logical(1))
    mandatoryFilled <- all(mandatoryFilled)
    shinyjs::toggleState(id = "CRT_changes", condition = mandatoryFilled)
  })  
  
