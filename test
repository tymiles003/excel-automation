      sendSweetAlert(
        session = session,
        title = "Success !!",
        text = paste("Operations details amended for Incident Number ",this_inc," !"),
        type = "success"
      )
      # shinyjs::reset("CRT_mod_pg")
      crt_ops1<-data.table(
        INC=input$CRT_mod_inc,
        Operational_call=c(input$operational_call_amend_ops),
